{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "therollingbuffoons.zapto.org;localhost;127.0.0.1",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    },
    "Limits": {
      "MaxRequestBodySize": 524288,       // 512KB
      "KeepAliveTimeout": "00:00:20",     // 20 seconds
      "RequestHeadersTimeout": "00:00:10" // 10 seconds
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "https://dqretro.github.io",
      "http://localhost:3000",
      "http://127.0.0.1:3000",
      "http:/192.168.0.25:3000"
    ]
  },
  "ForwardedHeaderOptions": {
    "ReverseProxyIpAddress": "127.0.0.1",
    "AllowedHost": "therollingbuffoons.zapto.org"
  }
}
